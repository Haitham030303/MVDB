@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<h3>@Model.Title</h3>
<p>Release Year: @Model.Year</p>

<h4>Stars:</h4>
@foreach (var star in Model.Stars)
{
    <text>@Html.ActionLink(star.Name, "Details", "People", new { id = star.Id }, new { @class = "link-dark"}),  &nbsp; </text>
}
<br />
<br />
@if (Model.Directors.Count == 1)
{
    <h4>Director:</h4>
}
else if (Model.Directors.Count > 1){
    <h4>Directors:</h4>
}

@foreach (var director in Model.Directors)
{
    <text>@Html.ActionLink(director.Name, "Details", "People", new { id = director.Id }, new { @class = "link-dark"}),  &nbsp;</text>
}